# Bertil AI API Configuration
# Copy this file to .env and configure the values

# Database
DATABASE_URL=sqlite+aiosqlite:///./bertil_local.db

# LLM Configuration
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-your-key-here
LLM_FALLBACK_ENABLED=true
LLM_EXTRACTION_THRESHOLD=0.8

# Knowledge Base
KB_HTTP_FETCH_ENABLED=true

# Email Configuration for Invoice Sending
# SMTP server settings for sending invoices via email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@company.com
SMTP_USE_TLS=true

# Common SMTP configurations:
# Gmail: smtp.gmail.com:587 (requires app password)
# Outlook: smtp-mail.outlook.com:587
# SendGrid: smtp.sendgrid.net:587
# Amazon SES: email-smtp.region.amazonaws.com:587

# Email Ingest (IMAP) - for receiving emails
EMAIL_INGEST_ENABLED=false
EMAIL_INGEST_STUB=true
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USER=your-email@company.com
EMAIL_IMAP_PASSWORD=your-password

# BankID (for Swedish authentication)
BANKID_CLIENT_ID=your-client-id
BANKID_CLIENT_SECRET=your-client-secret
BANKID_REDIRECT_URI=https://your-domain.com/auth/bankid/callback
BANKID_ENVIRONMENT=test

# Storage
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=eu-north-1